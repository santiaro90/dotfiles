# vim: set filetype=gitconfig:
[alias]
    # Add
    a = add
    aa = add .
    ap = add -p # Add file by chunks

    # Diff
    d = diff --color-words --patience
    dc = diff --cached --color-words --patience
    dt = difftool

    # Branching
    b = branch
    bv = branch -vv
    bm = branch -m
    br = branch -d
    bd = branch -D

    # Clone
    cl = clone -v

    # Commit
    amend = commit --amend
    c = commit
    ca = commit -a
    cam = !git add . && git commit -am
    cm = commit -m

    # Checkout
    ck = checkout
    ckb = checkout -
    ckm = checkout master
    cb = checkout -b
    cf = checkout --

    # Log
    ll = "log --decorate --graph --pretty='%C(yellow)[%H]%Creset%C(auto)%d%Creset%n  %s%n%n\
    Date: %C(blue)%cd%Creset%n\
    Author: %C(red)%an%Creset %C(green)<%ae>%Creset%n' --date=format:'%e %B, %Y - %H:%M:%S'"
    ls = log --decorate --pretty=format:'%C(yellow)[%h]%Creset%C(auto)%d%Creset - %s %C(blue)(%cr)%Creset %C(green)<%ae>%Creset'
    lost = !git ls $(git fsck --no-reflog | awk '/dangling commit/ {print $3}')

    # Init
    i = init
    ib = init --bare

    # Merge
    m = merge --no-ff --no-edit
    ma = merge --abort
    mf = merge --ff
    ms = merge --squash

    # Pull/Push
    pf = push --force-with-lease
    pl = pull --prune
    pt = push -u origin
    pu = push

    # Remote
    ra = remote add
    rb = browse
    ru = remote set-url
    rv = remote -v

    # Reset
    r = reset
    rh = reset HEAD
    rhr = reset --hard
    rs = reset --soft

    # Show
    sh = "show --pretty='%C(yellow)[%H]%Creset%C(auto)%d%Creset%n  %s%n%n\
    Date: %C(blue)%cd%Creset%n\
    Author: %C(red)%an%Creset %C(green)<%ae>%Creset%n' --date=format:'%e %B, %Y - %H:%M:%S'"
    shs = "show --stat --pretty='%C(yellow)[%H]%Creset%C(auto)%d%Creset%n  %s%n%n\
    Date: %C(blue)%cd%Creset%n\
    Author: %C(red)%an%Creset %C(green)<%ae>%Creset%n' --date=format:'%e %B, %Y - %H:%M:%S'"

    # Stash
    sta = stash apply
    stc = stash clear
    sth = stash show --color-words
    stl = stash list
    stp = stash pop
    stu = stash save -u

    # Status
    s = status --short --branch --untracked-files=all
    sl = status --untracked-files=all

[color]
    ui = auto

[color "branch"]
    current = green bold reverse
    local = green bold
    remote = blue
    upstream = magenta

[color "diff"]
    meta = magenta bold
    frag = yellow bold
    old = red bold reverse
    new = green bold reverse

[color "status"]
    added = green bold ul
    changed = yellow bold ul
    untracked = magenta bold

[core]
    editor = vim
    excludesfile = ~/.gitignore
    pager = less -RFX

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[github]
    user = santiaro90

[merge]
    conflictStyle = diff3
    tool = vimdiff

[push]
    default = simple

[url "https://github.com/"]
    insteadOf = ghh:

[url "git@github.com:"]
    insteadOf = ghs:

[user]
	email = santiaro90@gmail.com
	name = Santiago Alvarez Rodriguez
